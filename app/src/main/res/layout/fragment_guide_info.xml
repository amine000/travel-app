<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <TextView android:id="@+id/infoName"
        android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:textColor="#FF0000"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/largeImg"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/infoRating"
        android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="25dp"
        android:textColor="#0000FF"
        />

    <TextView android:id="@+id/infoDescription"
        android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:paddingBottom="20dp"
        android:textColor="#00AB12"
        />

    <Button
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Connect with Guide"
        android:id="@+id/connectGuide"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="connectGuide"
        android:textColor="#FFFFFF" />





</LinearLayout>
